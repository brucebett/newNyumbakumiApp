<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/medtPrice"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddHousesActivity">

    <EditText
        android:id="@+id/medtNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:layout_marginBottom="52dp"
        android:ems="10"
        android:hint="Enter House Number"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/medtSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/medtSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="48dp"
        android:ems="10"
        android:hint="ENter Houses Size"
        android:inputType="text"
        android:text="Enter House SIze"
        app:layout_constraintBottom_toTopOf="@+id/edtPrice"
        app:layout_constraintStart_toStartOf="@+id/edtPrice"
        app:layout_constraintTop_toBottomOf="@+id/medtNumber" />

    <EditText
        android:id="@+id/edtPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:ems="10"
        android:hint="Enter Price"
        android:inputType="text"
        android:text="Enter Price"
        app:layout_constraintBottom_toTopOf="@+id/edtimage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/medtSize" />

    <ImageView
        android:id="@+id/edtimage"
        android:layout_width="161dp"
        android:layout_height="0dp"
        android:layout_marginBottom="51dp"
        app:layout_constraintBottom_toTopOf="@+id/btnupload"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtPrice"
        app:srcCompat="@drawable/img_2" />

    <Button
        android:id="@+id/btnupload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="163dp"
        android:text="UPLOAD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/edtimage"
        app:layout_constraintTop_toBottomOf="@+id/edtimage" />
</androidx.constraintlayout.widget.ConstraintLayout>